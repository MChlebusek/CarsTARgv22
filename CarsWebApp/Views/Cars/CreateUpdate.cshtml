@model CarsWebApp.Models.Cars.CreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h4 class="mt-3 mb-4">Update</h4>
}
else
{
    <h4 class="mt-3 mb-4">Create</h4>
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CarType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for = "CarType" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FuelType" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Transmission" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EnginePowerKw" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EnginePowerKw" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Engine" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Engine" class="col-sm-2 col-form-label" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BuiltYear" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuiltYear" class="col-sm-2 col-form-label" />
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="Cars" type="submit" class="btn btn-success" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="Cars" type="submit" class="btn btn-primary" value="Create" />
        }
    </form>
</div>