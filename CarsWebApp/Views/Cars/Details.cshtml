@model CarsWebApp.Models.Cars.DetailsViewModel

<div class="container-fluid">
    <h4 class="text-center">Car details</h4>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Id)
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="form-group row">
        <label asp-for="CarType" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.CarType)
    </div>

    <div class="form-group row">
        <label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.FuelType)
    </div>

    <div class="form-group row">
        <label asp-for="Color" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Color)
    </div>

    <div class="form-group row">
        <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Transmission)
    </div>

    <div class="form-group row">
        <label asp-for="EnginePowerKw" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.EnginePowerKw)
    </div>

    <div class="form-group row">
        <label asp-for="Engine" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Engine)
    </div>

    <div class="form-group row">
        <label asp-for="BuiltYear" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.BuiltYear.Year)
    </div>

    <div class="form-group row">
        <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.CreatedAt)
    </div>

    <div class="form-group row">
        <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.ModifiedAt)
    </div>

    <a asp-action="Index" asp-controller="Cars" class="btn btn-primary">Back</a>

</div>